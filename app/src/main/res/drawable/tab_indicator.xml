<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_selected="false">
        <layer-list>
            <!--底层颜色为#720707, 用于显示tab的底边-->
            <item>
                <color android:color="@color/tab_underline_color" />
            </item>
            <!--顶层颜色为#000000-->
            <item android:bottom="1dp" android:drawable="@color/top_level_color" />
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_selected="false">
        <layer-list>
            <!--底层颜色为#720707, 用于显示tab的底边-->
            <item>
                <color android:color="@color/tab_underline_color" />
            </item>
            <!--顶层颜色为#000000-->
            <item android:bottom="1dp" android:drawable="@color/top_level_color" />
        </layer-list>
    </item>
    <item android:state_pressed="false" android:state_selected="true">
        <layer-list>
            <!--底层颜色为#720707, 用于显示tab的底边-->
            <item>
                <color android:color="@color/tab_underline_color" />
            </item>
            <!--顶层颜色为#000000-->
            <item android:bottom="4dp" android:drawable="@color/top_level_color" />
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <!--底层颜色为#720707, 用于显示tab的底边-->
            <item>
                <color android:color="@color/tab_underline_color" />
            </item>
            <!--顶层颜色为#000000-->
            <item android:bottom="4dp" android:drawable="@color/top_level_color" />
        </layer-list>
    </item>
</selector>
