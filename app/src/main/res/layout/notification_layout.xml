<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp">

    <ImageView
        android:id="@+id/music_img_notification"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@drawable/cd01"
    />

    <TextView
        android:id="@+id/song_title_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/music_img_notification"
        android:layout_alignTop="@id/music_img_notification"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
    />

    <TextView
        android:id="@+id/artist_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/music_img_notification"
        android:layout_below="@id/song_title_notification"
        android:layout_alignLeft="@id/song_title_notification"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
    />

    <ImageView
        android:id="@+id/prev_btn_notification"
        android:src="@mipmap/ic_action_playback_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/music_img_notification"
        android:layout_below="@id/artist_notification"
        android:layout_alignLeft="@id/song_title_notification"
    />

    <ImageView
        android:id="@+id/play_btn_notification"
        android:src="@mipmap/ic_action_playback_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/prev_btn_notification"
        android:layout_alignTop="@id/prev_btn_notification"
    />

    <ImageView
        android:id="@+id/next_btn_notification"
        android:src="@mipmap/ic_action_playback_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/play_btn_notification"
        android:layout_alignTop="@id/prev_btn_notification"
    />
</RelativeLayout>