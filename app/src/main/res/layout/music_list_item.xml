<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/singer_color"
        android:textSize="10sp"
        android:layout_below="@id/music_name"
        android:layout_alignLeft="@id/music_name"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <ImageView
        android:id="@+id/delete_music_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/singer_name"
        android:layout_alignTop="@id/music_name"
        android:src="@mipmap/ic_action_cancel"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>
</RelativeLayout>